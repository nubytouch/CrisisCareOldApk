<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:tint="@color/inactive_dark"
        app:srcCompat="@drawable/ic_close"/>

    <TextView
        android:id="@+id/error_label"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:paddingEnd="@dimen/dp_32"
        android:paddingLeft="@dimen/dp_32"
        android:paddingRight="@dimen/dp_32"
        android:paddingStart="@dimen/dp_32"
        android:text="@string/votre_connexion_internet_ne_semble_pas_active_"
        android:textColor="@color/material_dark_text_disabled"/>

    <Button
        android:id="@+id/retry_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/retry"
        android:textColor="@color/material_white_100"/>
</merge>