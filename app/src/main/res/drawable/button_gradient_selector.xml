<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/actionbar_bottom" />
            <stroke
                android:width="1dp"
                android:color="#696969" />
        
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
        android:endColor="@color/actionbar_bottom"
        android:startColor="@color/actionbar_top"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/stroke" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>